{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "css": {
    "formatter": {
      "indentStyle": "space",
      "enabled": true
    }
  },
  "files": {
    "ignore": ["public/build", "build"]
  },
  "formatter": { "indentStyle": "space", "lineWidth": 120 },
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
